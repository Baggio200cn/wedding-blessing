{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health.py",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/predict",
      "dest": "/api/predict.py",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/data-analysis",
      "dest": "/api/data-analysis.py",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/spiritual",
      "dest": "/api/spiritual.py",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/generate-tweet",
      "dest": "/api/generate-tweet.py",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/latest-results",
      "dest": "/api/latest-results.py",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/css/(.*)",
      "dest": "/public/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/public/js/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/public/favicon.ico"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ],
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.11",
      "memory": 1024,
      "maxDuration": 30
    }
  }
}
